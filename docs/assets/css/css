    border: none; /* Hapus border */
    padding: 8px 16px; /* Padding tombol */
    border-radius: 4px; /* Tambahkan sudut bulat */
    cursor: pointer; /* Ubah kursor saat diarahkan ke tombol */
    margin-right: 8px; /* Jarak antara tombol */
}

